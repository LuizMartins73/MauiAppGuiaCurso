<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuiaDesenvolvimentoSistemas.SobreOCursoPage"
             Title="Sobre o Curso">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="O que é Desenvolvimento de Sistemas?"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="O curso de Desenvolvimento de Sistemas prepara você para o mercado de TI..."
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Button Text="Voltar"
                    Clicked="OnBackButtonClicked"
                    HorizontalOptions="Center" />
        </StackLayout>
    </ScrollView>
</ContentPage>
